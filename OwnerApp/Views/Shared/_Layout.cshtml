@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Ramkrushna Electrotech</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <!-- AOS Animation CSS -->
    <link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet" />

    <!-- Site Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <!-- Header / Navbar -->
    <header style="background-color: #0A2540; padding: 15px 0;">
        <div class="container d-flex justify-content-between align-items-center flex-wrap">
            <h2 class="mb-0 text-white fw-semibold">⚡ Ramkrushna Electrotech</h2>
            <nav class="mt-2 mt-md-0">
                <a href="/" class="text-white me-4 text-decoration-none">Home</a>
                <a href="/Home/About" class="text-white me-4 text-decoration-none">About</a>
                <a href="/Home/Services" class="text-white me-4 text-decoration-none">Services</a>
                <a href="/Home/Projects" class="text-white me-4 text-decoration-none">Projects</a>
                <a href="/Home/Contact" class="text-white text-decoration-none">Contact Us</a>
            </nav>
        </div>
    </header>

    <!-- Main Content Area -->
    <main role="main" class="container py-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-light text-center py-3 mt-5">
        <p class="mb-0">&copy; 2025 Ramkrushna Electrotech. All rights reserved.</p>
    </footer>

    @RenderSection("Scripts", required: false)

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- AOS Animation JS -->
    <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 1000,
            once: true
        });
    </script>
</body>
</html>
